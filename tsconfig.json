{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "esnext",
      "es7"
    ],
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}